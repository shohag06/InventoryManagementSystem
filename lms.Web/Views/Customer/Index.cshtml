@model IEnumerable<lms.Model.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped table-bordered  table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        <p>Action</p>
                    </th>
                   
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>

                        <td>
                            <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i> 
                            </a>|
                            <a class="text-success" asp-action="Detail" asp-route-id="@item.Id">
                                <i class="fas fa-bars"></i> 
                            </a>|
                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="far fa-trash-alt"></i> 
                            </a>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                            @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@


                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>